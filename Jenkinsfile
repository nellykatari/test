pipeline {
  agent any
  Stages {
        Stage ("build") {
            Steps {
              echo "building the application"
            }
        }
        Stage ("test") {
            Steps {
              echo "testing the application"
            }
        }
        Stage ("deploy") {
            Steps {
              echo "deploying the application"
            }
        }
        Stage ("post") {
            Steps {
              echo "posting success or failure notification"
            }
        }
        
        }
   }
  }
